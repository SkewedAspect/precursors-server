{lib_dirs, ["../..", "../../deps"]}.

{deps_dir, "../../deps"}.

{deps, [
	{lager, "2.0.0", {git, "https://github.com/basho/lager.git", {tag, "2.0.0rc1"}}},
	{riakc, ".*", {git, "https://github.com/basho/riak-erlang-client.git", "HEAD"}},
	{jsx, "1.2.1", {git, "https://github.com/Licenser/jsx.git", "master"}},
	{pbkdf2, ".*", {git, "https://github.com/whitelynx/erlang-pbkdf2.git", "HEAD"}}
]}.

{post_hooks, [{compile, "cat success_message"}]}.

{edoc_opts, [{def, {web, "<b>Web Api </b>"}}]}.

{cover_enabled, true}.
{eunit_opts, [verbose]}.

