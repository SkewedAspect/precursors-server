{sub_dirs, ["rel"]}.

{lib_dirs, ["deps"]}.

{deps, [
	{lager, "0.9.4", {git, "http://github.com/basho/lager.git", {tag, "0.9.4"}}},
	{mochiweb, "2.4.2", {git, "https://github.com/mochi/mochiweb.git", {tag, "v2.4.2"}}},
	{netstring, "1", {git, "https://github.com/lordnull/erlnetstr.git", "master"}},
	{meck, "0.7.1", {git, "https://github.com/eproxus/meck.git", {tag, "0.7.1"}}},
	{sha2, "0.2.0", {git, "https://github.com/andrewtj/sha2_erlang.git", "master"}}
]}.

{pre_hooks, [
	{compile, "./hooks.sh pre_compile"},
	{clean, "./hooks.sh pre_clean"}
]}.
{post_hooks, [
	{compile, "./hooks.sh post_compile"},
	{'get-deps', "./hooks.sh post_get_deps"}
]}.

{edoc_opts, [{def, {web, "<b>Web Api </b>"}}]}.

{cover_enabled, true}.

{eunit_opts, [verbose]}.

