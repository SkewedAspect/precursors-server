{sub_dirs, ["rel"]}.

{deps, [
	{lager, "0.9.4", {git, "http://github.com/basho/lager.git", {tag, "0.9.4"}}},
	{protobuffs, "0.6.0", {git, "http://github.com/lordnull/erlang_protobuffs.git", "master"}},
	{webmachine, "1.9.0", {git, "https://github.com/basho/webmachine.git", {tag, "1.9.0"}}},
	{netstring, "1", {git, "https://github.com/lordnull/erlnetstr.git", "master"}}
]}.

{pre_hooks, [
	{compile, "./hooks.sh pre_compile"},
	{clean, "./hooks.sh pre_clean"}
]}.
{post_hooks, [{compile, "./hooks.sh post_compile"}]}.

{edoc_opts, [{def, {web, "<b>Web Api </b>"}}]}.

{cover_enabled, true}.

{eunit_opts, [verbose]}.
